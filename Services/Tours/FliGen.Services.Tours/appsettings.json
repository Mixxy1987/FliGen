{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=FliGen.Tours;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "elk": {
    "enabled": false,
    "url": "http://localhost:9200",
    "indexFormat": "tours-service-{0:yyyy.MM.dd}",
    "basicAuthEnabled": false,
    "username": "user",
    "password": "secret"
  },
  "mongo": {
    "connectionString": "mongodb://localhost:27017",
    "database": "tours-service",
    "seed": false
  },
  "rabbitMq": {
    "namespace": "tours",
    "retries": 3,
    "retryInterval": 2,
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "localhost"
    ],
    "requestTimeout": "00:00:10",
    "publishConfirmTimeout": "00:00:01",
    "recoveryInterval": "00:00:10",
    "persistentDeliveryMode": true,
    "autoCloseConnection": true,
    "automaticRecovery": true,
    "topologyRecovery": true,
    "exchange": {
      "durable": true,
      "autoDelete": false,
      "type": "Topic"
    },
    "queue": {
      "autoDelete": false,
      "durable": true,
      "exclusive": false
    }
  },
  "restEase": {
    "loadBalancer": "",
    "services": [
      {
        "name": "players-service",
        "host": "localhost",
        "scheme": "http",
        "port": "5001"
      },
      {
        "name": "seasons-service",
        "host": "localhost",
        "scheme": "http",
        "port": "5003"
      },
      {
        "name": "leagues-service",
        "host": "localhost",
        "scheme": "http",
        "port": "5004"
      },
      {
        "name": "teams-service",
        "host": "localhost",
        "scheme": "http",
        "port": "5005"
      },
      {
        "name": "operations-service",
        "host": "localhost",
        "scheme": "http",
        "port": "5006"
      }
    ]
  },
  "jaeger": {
    "enabled": true,
    "serviceName": "tours",
    "udpHost": "localhost",
    "udpPort": 6831,
    "maxPacketSize": 0,
    "sampler": "const"
  },
  "AllowedHosts": "*"
}